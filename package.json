{
    "name": "collab-ide",
    "private": true,
    "engines": {
        "node": "18.16.1"
    },
    "scripts": {
        "start:all": "lerna run --parallel --stream start:dev",
        "build:all": "lerna run --parallel --stream build",
        "start:api-gw": "lerna run start:dev --scope api-gateway --stream",
        "start:usr-sv": "lerna run start:dev --scope user-service --stream",
        "migration:run": "lerna run migration:run",
        "migration:revert": "lerna run migration:revert",
        "postinstall": "husky install",
        "lint": "lint-staged",
        "prettier:quick": "pretty-quick --staged",
        "compile": "lerna run --parallel compile",
        "compile:watch": "lerna run --parallel compile:watch",
        "clean": "lerna clean -y && rm -rf node_modules"
    },
    "lint-staged": {
        "**/*.{ts}": [
            "cross-env NODE_ENV=production eslint '**/*.ts' --fix"
        ]
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "eslint": "^8.49.0",
        "eslint-plugin-unused-imports": "^3.0.0",
        "husky": "^8.0.3",
        "lerna": "^7.3.0",
        "lint-staged": "^14.0.1",
        "prettier": "^3.0.3",
        "pretty-quick": "^3.1.3"
    },
    "workspaces": [
        "app/*",
        "api/*"
    ],
    "packageManager": "yarn@1.22.19",
    "dependencies": {}
}